{% extends 'base.html.twig' %}
{% block title %}Maison d’Enchères — Accueil{% endblock %}

{% block body %}
  <!-- HERO : vidéo réduite et encadrée -->
  <section class="bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10 lg:py-14">
      <div class="grid lg:grid-cols-12 gap-10 items-center">
        <!-- Texte -->
        <div class="lg:col-span-5">
          <h1 class="text-3xl lg:text-5xl font-medium leading-tight tracking-tight">
            L’excellence des enchères,<br>
            <span class="inline-block border-y border-black/10 px-1">sélectionnée</span> pour vous
          </h1>
          <p class="mt-5 text-black/70 max-w-prose">
            Objets d’exception, œuvres, pièces rares. Une expérience d’achat premium, sécurisée, et élégante.
          </p>
          <div class="mt-7 flex flex-wrap gap-3">
            <a href="{{ path('app_lot_index') }}" class="inline-flex items-center rounded border border-black px-5 py-2 text-[13px] tracking-wide hover:bg-black hover:text-white transition">
              Voir les objets en cours
            </a>
            <a href="{{ path('app_contact') }}" class="inline-flex items-center rounded border border-black/20 px-5 py-2 text-[13px] tracking-wide hover:bg-black/5 transition">
              Nous contacter
            </a>
          </div>
        </div>

        <!-- Vidéo -->
        <div class="lg:col-span-7">
          <div class="relative rounded-[14px] overflow-hidden border border-black/10">
            <video autoplay muted loop playsinline class="w-full h-64 sm:h-72 md:h-80 object-cover">
              <source src="{{ asset('videos/intro.mp4') }}" type="video/mp4">
            </video>
            <div class="pointer-events-none absolute inset-0 ring-1 ring-inset ring-[#D4AF37]/40"></div>
          </div>
          <p class="mt-3 text-[11px] tracking-wide text-black/50 text-right">Film d’introduction — © Maison</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Bannière défilante des lots/événements à venir -->
  <section class="bg-black text-white border-y border-[#D4AF37]/60">
    <div class="overflow-hidden whitespace-nowrap">
      <div class="inline-block animate-marquee py-3 text-sm tracking-wide">
        {% if evenementsAVenir is defined and evenementsAVenir|length > 0 %}
          {% for ev in evenementsAVenir %}
            <span class="mx-8">
              ⏳ <strong>{{ ev.titre }}</strong>
              {% if ev.debutAt is defined and ev.finAt is defined %}
                — du {{ ev.debutAt|date('d/m/Y H:i') }} au {{ ev.finAt|date('d/m/Y H:i') }}
              {% endif %}
            </span>
          {% endfor %}
        {% else %}
          <span class="mx-8">Aucun événement à venir pour le moment.</span>
        {% endif %}
      </div>
    </div>
  </section>

  <style>
    @keyframes marquee {
      0% { transform: translateX(100%); }
      100% { transform: translateX(-100%); }
    }
    .animate-marquee {
      animation: marquee 25s linear infinite;
    }
  </style>
{% endblock %}
