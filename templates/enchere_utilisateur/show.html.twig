{% extends 'base.html.twig' %}

{% block title %}Détail enchère utilisateur{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-accent m-0">Enchère utilisateur</h1>
        {% if is_granted('ROLE_ADMIN') %}
          <div>
            <a href="{{ path('app_enchere_utilisateur_index') }}" class="btn btn-outline-light me-2">← Retour</a>
            <a href="{{ path('app_enchere_utilisateur_edit', {'id': enchere_utilisateur.id}) }}" class="btn btn-primary">Éditer</a>
          </div>
        {% endif %}
      </div>

      <div class="card bg-dark border-light-subtle">
        <div class="card-body">
          <table class="table table-dark align-middle mb-0">
            <tbody>
              <tr>
                <th class="w-25">Id</th>
                <td>{{ enchere_utilisateur.id }}</td>
              </tr>
              <tr>
                <th>Montant</th>
                <td>{{ enchere_utilisateur.montant }}</td>
              </tr>
            </tbody>
          </table>
          {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-3">
              {{ include('enchere_utilisateur/_delete_form.html.twig') }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </main>
{% endblock %}
