{% extends 'base.html.twig' %}

{% block title %}Modifier l’enchère utilisateur{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container" style="max-width:800px;">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-accent m-0">Modifier l’enchère utilisateur</h1>
        <a href="{{ path('app_enchere_utilisateur_index') }}" class="btn btn-outline-light">← Retour</a>
      </div>
      <div class="card bg-dark border-light-subtle">
        <div class="card-body">
          {{ include('enchere_utilisateur/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
          {% if is_granted('ROLE_ADMIN') %}
            <div class="mt-2">
              {{ include('enchere_utilisateur/_delete_form.html.twig') }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </main>
{% endblock %}
