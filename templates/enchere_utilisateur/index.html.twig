{% extends 'base.html.twig' %}

{% block title %}Enchères utilisateurs{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-accent m-0">Enchères utilisateurs</h1>
        {% if is_granted('ROLE_ADMIN') %}
          <a href="{{ path('app_enchere_utilisateur_new') }}" class="btn btn-primary text-white">Créer</a>
        {% endif %}
      </div>

      <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
          <thead>
            <tr>
              <th>Id</th>
              <th>Montant</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
          {% for enchere_utilisateur in enchere_utilisateurs %}
            <tr>
              <td>{{ enchere_utilisateur.id }}</td>
              <td>{{ enchere_utilisateur.montant }}</td>
              <td class="text-end">
                {% if is_granted('ROLE_ADMIN') %}
                  <a class="btn btn-sm btn-outline-light me-2" href="{{ path('app_enchere_utilisateur_show', {'id': enchere_utilisateur.id}) }}">Voir</a>
                  <a class="btn btn-sm btn-primary" href="{{ path('app_enchere_utilisateur_edit', {'id': enchere_utilisateur.id}) }}">Éditer</a>
                {% endif %}
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="3" class="text-center text-muted">Aucun enregistrement</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </main>
{% endblock %}
