{% extends 'base.html.twig' %}

{% block title %}Lot index{% endblock %}

{% block body %}
    <h1>Lot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lot</th>
                <th>Categorie</th>
                <th>Paiement</th>
                <th>Facture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lot in lots %}
            <tr>
                <td>{{ lot.id }}</td>
                <td>{{ lot.Lot }}</td>
                <td>{{ lot.Categorie }}</td>
                <td>{{ lot.Paiement }}</td>
                <td>{{ lot.Facture }}</td>
                <td>
                    <a href="{{ path('app_lot_show', {'id': lot.id}) }}">show</a>
                    <a href="{{ path('app_lot_edit', {'id': lot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lot_new') }}">Create new</a>
{% endblock %}
