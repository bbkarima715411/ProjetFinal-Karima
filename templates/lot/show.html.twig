{% extends 'base.html.twig' %}

{% block title %}{{ lot.titre|default('Produit') }} — Antiqua{% endblock %}

{% block body %}
    <nav class="text-sm text-stone-500 mb-6">
        <a class="hover:text-stone-800 transition-colors" href="{{ path('app_home') }}">Accueil</a> 
        <span class="mx-2">/</span>
        <a class="hover:text-stone-800 transition-colors" href="{{ path('app_lot_index') }}">Tous les lots</a>
        <span class="mx-2">/</span>
        <span class="text-stone-700 font-medium">{{ lot.titre|default('Détails du lot') }}</span>
    </nav>

    <div class="grid lg:grid-cols-2 gap-8 items-start">
        {# Galerie d'images #}
        <div class="order-1 lg:order-2 bg-white rounded-2xl border border-stone-200 overflow-hidden">
            <div class="relative">
                <img src="{{ lot.imageUrl|default(asset('images/demo/placeholder.jpg')) }}"
                     class="w-full h-[28rem] object-cover" 
                     alt="{{ lot.titre|default('Photo du lot') }}">
                {% if lot.estVendu %}
                    <div class="absolute top-4 right-4 bg-red-600 text-white text-xs font-bold px-3 py-1 rounded-full">
                        Vendu
                    </div>
                {% endif %}
            </div>
            
            {# Miniatures supplémentaires (exemple) #}
            <div class="grid grid-cols-4 gap-2 p-2 bg-stone-50">
                {% for i in 1..3 %}
                    <button class="aspect-square overflow-hidden rounded border border-stone-200 hover:border-amber-500">
                        <img src="{{ asset('images/demo/placeholder.jpg') }}" 
                             class="w-full h-full object-cover" 
                             alt="Vue supplémentaire {{ i }}">
                    </button>
                {% endfor %}
                <button class="aspect-square border-2 border-dashed border-stone-300 rounded flex items-center justify-center text-stone-400 hover:border-amber-300 hover:text-amber-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                </button>
            </div>
        </div>

        {# Détails du lot #}
        <div class="order-2 lg:order-1 space-y-6">
            <div>
                <h1 class="text-3xl font-bold text-stone-900 mb-2">{{ lot.titre|default('Lot sans titre') }}</h1>
                <div class="flex items-center text-sm text-stone-500 space-x-4">
                    <span>Référence: #{{ lot.id|default('N/A') }}</span>
                    <span>•</span>
                    <span>Catégorie: {{ lot.categorie|default('Non spécifiée') }}</span>
                </div>
            </div>

            <div class="prose max-w-none text-stone-600">
                {{ lot.description|default(
                    '<p class="text-stone-400 italic">Aucune description disponible pour ce lot pour le moment.</p>'
                )|raw }}
            </div>

            <div class="space-y-4">
                <div class="bg-amber-50 border-l-4 border-amber-400 p-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-amber-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-amber-700">
                                Pensez à vérifier l'état de l'objet avant d'enchérir. Tous les lots sont vendus en l'état.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl border border-stone-200 p-6 space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-stone-500">Prix actuel</span>
                        <span class="text-2xl font-bold text-amber-700">
                            {{ (lot.prixActuel|default(0))|number_format(2, ',', ' ') }} €
                        </span>
                    </div>
                    
                    {% if lot.dateFin is defined and lot.dateFin %}
                        <div class="pt-4 border-t border-stone-100">
                            <div class="text-sm text-stone-500 mb-2">
                                {% if date() < date(lot.dateFin) %}
                                    Enchères en cours - Se termine dans 
                                    <span class="font-medium text-stone-900">
                                        {{ date(lot.dateFin).diff(date())|date('%a jours %Hh%M') }}
                                    </span>
                                {% else %}
                                    Ventes terminées
                                {% endif %}
                            </div>
                            <div class="w-full bg-stone-200 rounded-full h-2.5">
                                {% set progress = 100 - ((date(lot.dateFin).timestamp - date().timestamp) / (date(lot.dateFin).timestamp - date('now - 7 days').timestamp) * 100)|round(0, 'ceil') %}
                                <div class="bg-amber-600 h-2.5 rounded-full" style="width: {{ progress }}%"></div>
                            </div>
                            <div class="mt-1 text-xs text-stone-500 text-right">
                                Se termine le {{ lot.dateFin|format_datetime('full', 'short', locale='fr') }}
                            </div>
                        </div>
                    {% endif %}

                    <div class="pt-4 border-t border-stone-100">
                        <div class="flex flex-col sm:flex-row gap-3">
                            <a href="#"
                               class="flex-1 flex items-center justify-center px-5 py-3 rounded-lg bg-amber-700 text-white hover:bg-amber-800 transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Enchérir maintenant
                            </a>
                            <button class="p-3 rounded-lg border border-stone-300 hover:bg-stone-50 transition-colors">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                <span class="sr-only">Ajouter aux favoris</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {# Informations supplémentaires #}
            <div class="bg-stone-50 rounded-xl p-6 space-y-4">
                <h3 class="font-medium text-stone-900">Informations complémentaires</h3>
                <dl class="grid grid-cols-1 gap-x-4 gap-y-2 sm:grid-cols-2">
                    <div class="sm:col-span-2">
                        <dt class="text-sm text-stone-500">Vendeur</dt>
                        <dd class="mt-1 text-sm text-stone-900">
                            <a href="#" class="text-amber-700 hover:text-amber-800">{{ lot.vendeur|default('Anonyme') }}</a>
                        </dd>
                    </div>
                    <div>
                        <dt class="text-sm text-stone-500">Époque</dt>
                        <dd class="mt-1 text-sm text-stone-900">{{ lot.epoque|default('Non spécifiée') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-stone-500">Style</dt>
                        <dd class="mt-1 text-sm text-stone-900">{{ lot.style|default('Non spécifié') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-stone-500">État</dt>
                        <dd class="mt-1 text-sm text-stone-900">{{ lot.etat|default('Bon état') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-stone-500">Matériaux</dt>
                        <dd class="mt-1 text-sm text-stone-900">{{ lot.materiaux|default('Non spécifiés') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm text-stone-500">Dimensions</dt>
                        <dd class="mt-1 text-sm text-stone-900">
                            {{ lot.dimensions|default('Non spécifiées') }}
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

    {# Section questions et réponses #}
    <div class="mt-12 bg-white rounded-xl border border-stone-200 overflow-hidden">
        <div class="border-b border-stone-200">
            <nav class="flex -mb-px" aria-label="Tabs">
                <button type="button" class="w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm border-amber-500 text-amber-600">
                    Description détaillée
                </button>
                <button type="button" class="w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm border-transparent text-stone-500 hover:text-stone-700 hover:border-stone-300">
                    Questions (3)
                </button>
                <button type="button" class="w-1/3 py-4 px-1 text-center border-b-2 font-medium text-sm border-transparent text-stone-500 hover:text-stone-700 hover:border-stone-300">
                    Livraison & retrait
                </button>
            </nav>
        </div>
        <div class="p-6">
            <h3 class="text-lg font-medium text-stone-900 mb-4">À propos de ce lot</h3>
            <div class="prose max-w-none text-stone-600">
                {{ lot.descriptionLongue|default(
                    '<p class="text-stone-400 italic">Aucune description détaillée n\'est disponible pour ce lot.</p>'
                )|raw }}
                
                <h4>Points forts</h4>
                <ul class="list-disc pl-5 space-y-1">
                    <li>Pièce d'exception en excellent état de conservation</li>
                    <li>Certificat d'authenticité inclus</li>
                    <li>Provenance vérifiée</li>
                </ul>
            </div>
        </div>
    </div>

    {# Lots similaires #}
    <div class="mt-12">
        <h3 class="text-xl font-semibold text-stone-900 mb-6">Lots similaires</h3>
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
            {% for i in 1..4 %}
                <article class="bg-white rounded-xl border border-stone-200 overflow-hidden hover:shadow-md transition-shadow">
                    <a href="#" class="block">
                        <img src="{{ asset('images/demo/placeholder.jpg') }}" 
                             class="w-full aspect-[4/3] object-cover" 
                             alt="Lot similaire {{ i }}">
                    </a>
                    <div class="p-4">
                        <h4 class="font-medium text-stone-900">Lot similaire {{ i }}</h4>
                        <div class="mt-2 flex items-center justify-between">
                            <span class="text-stone-500 text-sm">Prix actuel</span>
                            <span class="font-bold">1 250,00 €</span>
                        </div>
                        <a href="#"
                           class="mt-4 inline-flex w-full justify-center px-4 py-2 text-sm rounded-lg bg-stone-100 text-stone-700 hover:bg-stone-200">
                            Voir le lot
                        </a>
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
{% endblock %}
