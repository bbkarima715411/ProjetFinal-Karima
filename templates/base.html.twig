{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Vestige d’Or — Enchères{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">

    {# Google Fonts #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet">

    {# CSS/JS “vanilla” #}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <script defer src="{{ asset('js/app.js') }}"></script>
  </head>

  <body>
    {% include '_partials/header.html.twig' %}
      <main class="page-container">
        {% block body %}{% endblock %}
      </main>
    {% include '_partials/footer.html.twig' %}
  </body>
</html>
