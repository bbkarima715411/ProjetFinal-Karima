{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Vestige d’Or — Enchères{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="{{ asset('favicon.svg') }}">

    {# Google Fonts #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet">

    {# Bootstrap 5 CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    {# CSS/JS “vanilla” #}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <script defer src="{{ asset('js/app.js') }}"></script>
  </head>

  <body>
    {% include '_partials/header.html.twig' %}
      <main class="page-container">
        {% block body %}{% endblock %}
      </main>
    {% include '_partials/footer.html.twig' %}

    {# Bootstrap 5 JS Bundle #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    {# Bootstrap Toasts for flash messages #}
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          {% set cls =
            label in ['success'] ? 'text-bg-success' :
            (label in ['error','danger'] ? 'text-bg-danger' :
            (label in ['warning'] ? 'text-bg-warning' : 'text-bg-info'))
          %}
          <div class="toast {{ cls }} border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="4000">
            <div class="d-flex">
              <div class="toast-body">{{ message|raw }}</div>
              <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', function(){
        const toasts = document.querySelectorAll('.toast');
        toasts.forEach(t => new bootstrap.Toast(t).show());
      });
    </script>
  </body>
</html>
