{% extends 'base.html.twig' %}

{% block title %}Confirmation de commande #{{ order.reference }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h3 class="mb-0">Merci pour votre commande !</h3>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                            <h2 class="mt-3">Paiement accepté</h2>
                            <p class="lead">Votre commande #{{ order.reference }} a été enregistrée avec succès.</p>
                        </div>

                        <div class="alert alert-success">
                            <h5 class="alert-heading">Récapitulatif de votre commande</h5>
                            <p class="mb-1">
                                <strong>Référence :</strong> {{ order.reference }}<br>
                                <strong>Date :</strong> {{ order.createdAt|date('d/m/Y à H:i') }}<br>
                                <strong>Montant total :</strong> {{ order.total|number_format(2, ',', ' ') }} €<br>
                                <strong>Statut :</strong> 
                                <span class="badge bg-success">
                                    {% if order.status == 'paid' %}Payé{% else %}{{ order.status }}{% endif %}
                                </span>
                            </p>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">Adresse de livraison</h6>
                                    </div>
                                    <div class="card-body">
                                        <address class="mb-0">
                                            {{ order.deliveryFirstname }} {{ order.deliveryLastname }}<br>
                                            {{ order.deliveryAddress }}<br>
                                            {% if order.deliveryAddress2 %}{{ order.deliveryAddress2 }}<br>{% endif %}
                                            {{ order.deliveryPostalCode }} {{ order.deliveryCity }}<br>
                                            {{ order.deliveryCountry }}
                                        </address>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-header bg-light">
                                        <h6 class="mb-0">Détails de la commande</h6>
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li class="d-flex justify-content-between py-2 border-bottom">
                                                <span>Articles :</span>
                                                <span>{{ order.items|length }}</span>
                                            </li>
                                            <li class="d-flex justify-content-between py-2 border-bottom">
                                                <span>Livraison :</span>
                                                <span>Gratuite</span>
                                            </li>
                                            <li class="d-flex justify-content-between py-2 fw-bold">
                                                <span>Total TTC :</span>
                                                <span>{{ order.total|number_format(2, ',', ' ') }} €</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <p class="mb-4">
                                Un email de confirmation vous a été envoyé à l'adresse <strong>{{ order.customerEmail }}</strong>.
                                Vous pouvez également suivre l'état de votre commande dans votre <a href="{{ path('account_order_show', {'id': order.id}) }}">espace client</a>.
                            </p>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <a href="{{ path('account_order_show', {'id': order.id}) }}" class="btn btn-primary me-md-2">
                                    <i class="fas fa-box-open me-2"></i>Voir ma commande
                                </a>
                                <a href="{{ path('app_accueil') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-shopping-bag me-2"></i>Retour à la boutique
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
