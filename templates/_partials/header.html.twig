{# templates/_partials/header.html.twig #}
{% set events = evenementsEnCours|default([]) %}

<header id="main-header" class="sticky-top">
  {# Barre de navigation supérieure #}
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand fw-bold text-warning" href="{{ path('app_accueil') }}">
        <i class="bi bi-gem me-2"></i>Vestige d'Or
      </a>
      
      {# Bouton de menu mobile #}
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        {# Navigation principale #}
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') == 'app_accueil' ? 'active' : '' }}" href="{{ path('app_accueil') }}">
              <i class="bi bi-house-door me-1"></i>Accueil
            </a>
          </li>
          
          <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') == 'app_lot_index' ? 'active' : '' }}" href="{{ path('app_lot_index') }}">
              <i class="bi bi-hammer me-1"></i>Enchères
            </a>
          </li>
          
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle {{ app.request.get('_route') == 'app_categorie_show' ? 'active' : '' }}" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-tags me-1"></i>Catégories
            </a>
            <ul class="dropdown-menu dropdown-menu-dark">
              <li><h6 class="dropdown-header">Mobilier</h6></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'sieges-fauteuils'}) }}">Sièges & Fauteuils</a></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'tables-bureaux'}) }}">Tables & Bureaux</a></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'armoires-commodes'}) }}">Armoires & Commodes</a></li>
              <li><hr class="dropdown-divider"></li>
              
              <li><h6 class="dropdown-header">Art</h6></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'peintures-anciennes'}) }}">Peintures anciennes</a></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'gravures-dessins'}) }}">Gravures & Dessins</a></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'affiches-anciennes'}) }}">Affiches anciennes</a></li>
              <li><hr class="dropdown-divider"></li>
              
              <li><h6 class="dropdown-header">Objets de valeur</h6></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'bijoux-anciens'}) }}">Bijoux anciens</a></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'montres-collection'}) }}">Montres de collection</a></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'objets-precieux'}) }}">Objets précieux</a></li>
              <li><a class="dropdown-item" href="{{ path('app_categorie_show', {slug: 'monnaies-medailles'}) }}">Monnaies & Médailles</a></li>
            </ul>
          </li>
          
          <li class="nav-item">
            <a class="nav-link {{ app.request.get('_route') == 'app_contact' ? 'active' : '' }}" href="{{ path('app_contact') }}">
              <i class="bi bi-envelope me-1"></i>Contact
            </a>
          </li>
          
          {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
              <a class="nav-link text-warning" href="{{ path('admin_dashboard') }}">
                <i class="bi bi-speedometer2 me-1"></i>Administration
              </a>
            </li>
          {% endif %}
        </ul>

        {# Actions utilisateur #}
        <div class="d-flex align-items-center gap-2">
          {% if app.user %}
            <div class="dropdown">
              <button class="btn btn-outline-light btn-sm dropdown-toggle d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-1"></i>
                {% set fullName = (app.user.firstName ~ ' ' ~ app.user.lastName)|trim %}
                {{ fullName ?: 'Mon compte' }}
              </button>
              <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="{{ path('app_profil') }}"><i class="bi bi-person me-2"></i>Mon profil</a></li>
                <li><a class="dropdown-item" href="{{ path('app_mes_encheres') }}"><i class="bi bi-hammer me-2"></i>Mes enchères</a></li>
                <li><a class="dropdown-item" href="{{ path('app_mes_favoris') }}"><i class="bi bi-heart me-2"></i>Favoris</a></li>
                <li><a class="dropdown-item" href="{{ path('app_mes_factures') }}"><i class="bi bi-receipt me-2"></i>Mes factures</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
              </ul>
            </div>
          {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-sm">
              <i class="bi bi-box-arrow-in-right me-1"></i>Connexion
            </a>
            <a href="{{ path('app_register') }}" class="btn btn-warning btn-sm">
              <i class="bi bi-person-plus me-1"></i>S'inscrire
            </a>
          {% endif %}
          
          <a href="{{ path('cart_show') }}" class="btn btn-outline-light btn-sm position-relative" title="Panier">
            <i class="bi bi-cart"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
              0
              <span class="visually-hidden">articles dans le panier</span>
            </span>
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

{# Bannière d'information #}
<div class="bg-warning py-2 text-center small" style="color: #000 !important; font-weight: 500;">
  <div class="container">
    <i class="bi bi-truck me-2"></i> Livraison offerte à partir de 500€ d'achat
    <span class="mx-3">|</span>
    <i class="bi bi-shield-check me-2"></i> Paiement sécurisé
    <span class="mx-3">|</span>
    <i class="bi bi-arrow-counterclockwise me-2"></i> Retours sous 14 jours
  </div>
</div>
