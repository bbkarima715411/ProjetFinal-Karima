<header class="border-b border-stone-200 bg-white/70 backdrop-blur">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <a href="{{ path('app_home') }}" class="text-xl font-bold">
      <span class="text-amber-700">Antiqua</span> Enchères
    </a>
    <nav class="hidden md:flex items-center gap-6 text-sm">
      <a href="{{ path('app_lot_index') }}" class="hover:text-amber-700">Lots</a>
      <a href="{{ path('app_evenement_enchere_index') }}" class="hover:text-amber-700">Événements</a>
      <a href="{{ path('app_utilisateur_index') }}" class="hover:text-amber-700">Vendeurs</a>
    </nav>
    <div class="flex items-center gap-3">
      {% if app.user %}
        <span class="hidden sm:inline text-sm text-stone-600">{{ app.user.userIdentifier }}</span>
        <a href="{{ path('app_logout') }}" class="px-3 py-2 rounded-lg border border-stone-300 hover:bg-stone-50">Logout</a>
      {% else %}
        <a href="{{ path('app_login') }}" class="px-3 py-2 rounded-lg border border-stone-300 hover:bg-stone-50">Login</a>
        <a href="{{ path('app_register') }}" class="px-3 py-2 rounded-lg bg-amber-700 text-white hover:bg-amber-800">S’inscrire</a>
      {% endif %}
    </div>
  </div>
</header>

