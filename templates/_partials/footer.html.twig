{# templates/_partials/footer.html.twig #}
<footer class="footer border-top mt-5">
  <div class="container py-5">
    <div class="row g-4">
      <div class="col-12 col-lg-5">
        <h5 class="fw-bold mb-2 text-accent">Vestige d’Or</h5>
        <p class="mb-0 text-muted">Maison d’enchères — objets rares et pièces d’exception.</p>
      </div>

      <div class="col-6 col-lg-3">
        <h6 class="text-uppercase text-muted small mb-2">Navigation</h6>
        <ul class="list-unstyled mb-0">
          <li class="mb-1"><a class="link-light" href="{{ path('app_accueil') }}">Accueil</a></li>
          <li class="mb-1"><a class="link-light" href="{{ path('app_lot_index') }}">Enchères</a></li>
          <li class="mb-1"><a class="link-light" href="{{ path('app_contact') }}">Contact</a></li>
          {% if app.user %}
            <li class="mb-1"><a class="link-light" href="{{ path('app_profil') }}">Mon profil</a></li>
          {% else %}
            <li class="mb-1"><a class="link-light" href="{{ path('app_login') }}">Connexion</a></li>
          {% endif %}
        </ul>
      </div>

      <div class="col-6 col-lg-4">
        <h6 class="text-uppercase text-muted small mb-2">Contact</h6>
        <ul class="list-unstyled mb-3">
          <li class="mb-1 text-muted">Email: contact@vestigedor.example</li>
          <li class="mb-1 text-muted">Tél: +33 1 23 45 67 89</li>
        </ul>
        <div class="d-flex gap-3">
          <a class="link-light" href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
          <a class="link-light" href="#" aria-label="X"><i class="bi bi-twitter-x"></i></a>
          <a class="link-light" href="#" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
        </div>
      </div>
    </div>
  </div>

  <div class="border-top py-3">
    <div class="container d-flex justify-content-between align-items-center small text-muted">
      <span>© {{ "now"|date("Y") }} Vestige d’Or</span>
      <span>FR · EN</span>
    </div>
  </div>
</footer>
