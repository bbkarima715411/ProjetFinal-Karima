{% extends 'base.html.twig' %}

{% block title %}Mes favoris — Maison d’Enchères{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container" style="max-width:1000px;">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-accent m-0">Mes favoris</h1>
        <a href="{{ path('app_lot_index') }}" class="btn btn-outline-light">← Voir les lots</a>
      </div>

      {% if favoris is empty %}
        <div class="card bg-dark border-light-subtle">
          <div class="card-body">
            <p class="text-muted mb-0">Aucun favori pour le moment.</p>
            <p class="text-muted mb-0">Parcourez <a class="link-light" href="{{ path('app_lot_index') }}">les lots</a> et ajoutez-les à vos favoris.</p>
          </div>
        </div>
      {% else %}
        <div class="row g-3">
          {% for fav in favoris %}
            {# fav.lot est une entité Lot #}
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card bg-dark border-light-subtle h-100">
                <div class="card-body d-flex flex-column">
                  <h2 class="h6 text-accent mb-2">{{ fav.lot.titre ?? 'Lot #' ~ fav.lot.id }}</h2>
                  <div class="text-muted small mb-3">Catégorie: {{ fav.lot.categorie ?? '—' }}</div>
                  <div class="mt-auto d-flex gap-2">
                    <a class="btn btn-sm btn-outline-light" href="{{ path('app_lot_show', {id: fav.lot.id}) }}">Voir</a>
                    <form action="{{ path('app_favori_remove', { id: fav.lot.id }) }}" method="post" class="d-inline ms-auto">
                      <input type="hidden" name="_token" value="{{ csrf_token('fav_remove_' ~ fav.lot.id) }}">
                      <button class="btn btn-sm btn-outline-warning">★ Retirer</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </main>
{% endblock %}
