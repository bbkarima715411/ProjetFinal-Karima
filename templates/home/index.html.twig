{% extends 'base.html.twig' %}

{% block title %}Accueil — Vestige d’Or{% endblock %}

{% block body %}
    {# HERO sobre avec accent doré #}
    <section class="mb-10 text-center">
        <h1 class="text-4xl md:text-5xl font-['Playfair Display'] font-semibold tracking-wide inline-block">
            Vestige d’Or
            <span class="block mx-auto mt-3 h-[2px] w-20 bg-amber-600/70"></span>
        </h1>
        <p class="mt-3 text-neutral-600 max-w-2xl mx-auto">
            Quand l’histoire rencontre l’élégance. Des pièces authentifiées, sélectionnées avec exigence.
        </p>
        <div class="mt-5 flex items-center justify-center gap-3">
            <a href="{{ path('app_lot_index') }}" class="inline-flex items-center rounded-lg bg-black text-white px-4 py-2.5 hover:bg-neutral-900">Découvrir les lots</a>
            <a href="{{ path('app_register') }}" class="inline-flex items-center rounded-lg border border-neutral-300 px-4 py-2.5 text-black hover:border-amber-600 hover:text-amber-700">S’inscrire</a>
        </div>
    </section>

    {# Mosaïque d'images : centre large + 4 petites #}
    <section class="mb-10">
        <div class="grid grid-cols-7 gap-3 items-stretch">
            <img src="{{ asset('images/demo/commo.png') }}" 
                 class="col-span-1 aspect-[3/4] object-cover rounded-xl" 
                 alt="Commode ancienne">
            <img src="{{ asset('images/demo/Brache.png') }}" 
                 class="col-span-1 aspect-[3/4] object-cover rounded-xl" 
                 alt="Guéridon d'époque">
            <img src="{{ asset('images/demo/chaise.png') }}"   
                 class="col-span-3 aspect-[3/4] object-cover rounded-2xl" 
                 alt="Chaise de style Louis XV">
            <img src="{{ asset('images/demo/vase.png') }}"     
                 class="col-span-1 aspect-[3/4] object-cover rounded-xl" 
                 alt="Vase en porcelaine">
            <img src="{{ asset('images/demo/table9.png') }}"    
                 class="col-span-1 aspect-[3/4] object-cover rounded-xl" 
                 alt="Table ancienne">
        </div>
    </section>

    {# Barre de recherche #}
    <form action="{{ path('app_lot_index') }}" 
          method="get" 
          class="mt-2 mb-10 flex flex-col md:flex-row gap-3 max-w-2xl mx-auto">
        <input type="search" 
               name="q" 
               placeholder="Rechercher un lot, époque, style…"
               class="w-full md:flex-1 px-4 py-3 rounded-xl border border-neutral-300 focus:outline-none focus:ring-2 focus:ring-amber-500/30">
        <button type="submit" 
                class="px-5 py-3 rounded-xl bg-black text-white hover:bg-neutral-900 transition-colors">
            Rechercher
        </button>
    </form>

    {# Section Produits #}
    <h2 class="text-center text-2xl font-['Playfair Display'] font-semibold text-stone-900 mb-6 inline-block">
        Nos dernières acquisitions
        <span class="block mx-auto mt-2 h-[2px] w-12 bg-amber-600/60"></span>
    </h2>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {% for lot in lots|default([]) %}
            <article class="bg-white rounded-xl border border-neutral-200 overflow-hidden hover:shadow-md transition-all duration-300">
                <a href="{{ path('app_lot_show', {id: lot.id}) }}" class="block">
                    <img src="{{ lot.imageFilename ? asset('uploads/' ~ lot.imageFilename) : asset('images/demo/placeholder.jpg') }}"
                         class="w-full aspect-[4/3] object-cover" 
                         alt="{{ lot.titre|default('Photo du lot') }}">
                </a>
                <div class="p-4">
                    <h3 class="font-medium text-stone-900">{{ lot.titre|default('Lot sans titre') }}</h3>
                    <p class="text-sm text-neutral-600 mt-1">Antiquité authentifiée</p>
                    <div class="mt-3 flex items-center justify-between">
                        <span class="text-neutral-600 text-sm">Prix actuel</span>
                        <span class="font-bold">{{ (lot.prixActuel|default(0))|number_format(2, ',', ' ') }} €</span>
                    </div>
                    <a href="{{ path('app_lot_show', {id: lot.id}) }}"
                       class="mt-4 inline-flex w-full justify-center px-4 py-2 rounded-lg bg-black text-white hover:bg-neutral-900 transition-colors">
                        Détails & enchérir
                    </a>
                </div>
            </article>
        {% else %}
            {# Contenu de démonstration si pas de lots #}
            {% for i in 1..8 %}
                <article class="bg-white rounded-xl border border-neutral-200 overflow-hidden hover:shadow-md transition-all duration-300">
                    <div class="aspect-[4/3] bg-stone-100 flex items-center justify-center">
                        <span class="text-stone-300">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </span>
                    </div>
                    <div class="p-4">
                        <h3 class="font-medium text-stone-900">Objet d'exception</h3>
                        <p class="text-sm text-neutral-600 mt-1">Antiquité authentifiée</p>
                        <div class="mt-3 flex items-center justify-between">
                            <span class="text-neutral-600 text-sm">Prix sur demande</span>
                            <span class="font-bold">0,00 €</span>
                        </div>
                        <span class="mt-4 inline-flex w-full justify-center px-4 py-2 rounded-lg bg-stone-100 text-neutral-600">
                            Bientôt disponible
                        </span>
                    </div>
                </article>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}

