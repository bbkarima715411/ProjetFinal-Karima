{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Accueil — Vestige d’Or{% endblock %}

{# Styles locaux (ticker + Playfair si besoin) #}
{% block styles %}
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
  <style>
    @keyframes ticker {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
  </style>
{% endblock %}

{% block body %}
  {# HERO vidéo #}
  <section class="mb-8 relative rounded-2xl overflow-hidden border border-neutral-200">
    <video class="w-full h-[60vh] object-cover" autoplay muted loop playsinline>
      {# Ajoute un .webm si tu en as un #}
      {# <source src="{{ asset('video/hero.webm') }}" type="video/webm"> #}
      <source src="{{ asset('video/hero.mp4') }}" type="video/mp4">
    </video>
    <div class="absolute inset-0 bg-black/30"></div>
    <div class="absolute inset-0 flex items-center justify-center text-center px-6">
      <div>
        <h1 class="font-['Playfair Display'] text-4xl md:text-5xl text-white font-semibold tracking-wide inline-block">
          Vestige d’Or
          <span class="block mx-auto mt-3 h-[2px] w-24 bg-white/80"></span>
        </h1>
        <p class="mt-3 text-white/85 max-w-2xl mx-auto">
          Quand l’histoire rencontre l’élégance. Des pièces authentifiées, sélectionnées avec exigence.
        </p>
        <div class="mt-5 flex items-center justify-center gap-3">
          <a href="{{ path('app_lot_index') }}" class="inline-flex items-center rounded-lg bg-white text-black px-4 py-2.5 hover:bg-neutral-200">Découvrir les lots</a>
          <a href="{{ path('app_register') }}" class="inline-flex items-center rounded-lg border border-white/70 px-4 py-2.5 text-white hover:bg-white/10">S’inscrire</a>
        </div>
      </div>
    </div>
  </section>

  {# Barre défilante — “Articles à venir” #}
  {% set upcoming = upcoming|default([
    { title: 'Pendule Empire en bronze doré', eta: 'Samedi 28/09' },
    { title: 'Commode Louis XV marquetée',   eta: 'Mardi 30/09' },
    { title: 'Montre de poche 1900',         eta: 'Jeudi 02/10' },
    { title: 'Vase cloisonné XIXᵉ',          eta: 'Dimanche 05/10' },
  ]) %}

  <section aria-label="Articles à venir" class="mb-10">
    <div class="relative overflow-hidden border border-neutral-200 rounded-xl bg-white">
      <div class="absolute left-0 top-0 bottom-0 w-16 bg-gradient-to-r from-white to-transparent pointer-events-none"></div>
      <div class="absolute right-0 top-0 bottom-0 w-16 bg-gradient-to-l from-white to-transparent pointer-events-none"></div>

      {# Le ruban défilant (on duplique le contenu pour une boucle fluide) #}
      <div class="whitespace-nowrap flex">
        <div class="flex items-center gap-6 px-6 py-3 animate-[ticker_24s_linear_infinite]">
          {% for item in upcoming %}
            <span class="inline-flex items-center gap-2 text-sm text-neutral-700">
              <span class="inline-block w-1.5 h-1.5 rounded-full bg-black"></span>
              <span class="font-medium">{{ item.title }}</span>
              <span class="text-neutral-400">·</span>
              <span class="text-neutral-500">à venir : {{ item.eta }}</span>
            </span>
          {% endfor %}
          {% for item in upcoming %}
            <span class="inline-flex items-center gap-2 text-sm text-neutral-700">
              <span class="inline-block w-1.5 h-1.5 rounded-full bg-black"></span>
              <span class="font-medium">{{ item.title }}</span>
              <span class="text-neutral-400">·</span>
              <span class="text-neutral-500">à venir : {{ item.eta }}</span>
            </span>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  {# Dernières acquisitions #}
  <h2 class="text-center text-2xl font-['Playfair Display'] font-semibold text-stone-900 mb-6 inline-block">
    Nos dernières acquisitions
    <span class="block mx-auto mt-2 h-[2px] w-12 bg-neutral-900/70"></span>
  </h2>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    {% for lot in lots|default([]) %}
      <article class="bg-white rounded-xl border border-neutral-200 overflow-hidden hover:shadow-md transition-all duration-300">
        <a href="{{ path('app_lot_show', {id: lot.id}) }}" class="block">
          <img src="{{ lot.imageFilename ? asset('uploads/' ~ lot.imageFilename) : asset('images/demo/placeholder.jpg') }}"
               class="w-full aspect-[4/3] object-cover" 
               alt="{{ lot.titre|default('Photo du lot') }}">
        </a>
        <div class="p-4">
          <h3 class="font-medium text-stone-900">{{ lot.titre|default('Lot sans titre') }}</h3>
          <p class="text-sm text-neutral-600 mt-1">Antiquité authentifiée</p>
          <div class="mt-3 flex items-center justify-between">
            <span class="text-neutral-600 text-sm">Prix actuel</span>
            <span class="font-bold">{{ (lot.prixActuel|default(0))|number_format(2, ',', ' ') }} €</span>
          </div>
          <a href="{{ path('app_lot_show', {id: lot.id}) }}"
             class="mt-4 inline-flex w-full justify-center px-4 py-2 rounded-lg bg-black text-white hover:bg-neutral-900 transition-colors">
            Détails & enchérir
          </a>
        </div>
      </article>
    {% else %}
      {% for i in 1..8 %}
        <article class="bg-white rounded-xl border border-neutral-200 overflow-hidden hover:shadow-md transition-all duration-300">
          <div class="aspect-[4/3] bg-stone-100 flex items-center justify-center">
            <span class="text-stone-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </span>
          </div>
          <div class="p-4">
            <h3 class="font-medium text-stone-900">Objet d'exception</h3>
            <p class="text-sm text-neutral-600 mt-1">Antiquité authentifiée</p>
            <div class="mt-3 flex items-center justify-between">
              <span class="text-neutral-600 text-sm">Prix sur demande</span>
              <span class="font-bold">0,00 €</span>
            </div>
            <span class="mt-4 inline-flex w-full justify-center px-4 py-2 rounded-lg bg-stone-100 text-neutral-600">
              Bientôt disponible
            </span>
          </div>
        </article>
      {% endfor %}
    {% endfor %}
  </div>
{% endblock %}
