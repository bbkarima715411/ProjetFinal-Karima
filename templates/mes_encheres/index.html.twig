{% extends 'base.html.twig' %}

{% block title %}Mes enchères — Maison d’Enchères{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container" style="max-width:1100px;">
      <h1 class="h3 text-accent mb-4">Mes enchères</h1>

      {% if encheres is empty %}
        <div class="card bg-dark border-light-subtle">
          <div class="card-body">
            <p class="text-muted mb-0">Vous n’avez pas encore participé à une enchère.</p>
            <p class="text-muted mb-0">Découvrez <a class="link-light" href="{{ path('app_lot_index') }}">les lots en cours</a> et lancez-vous.</p>
          </div>
        </div>
      {% else %}
        <div class="card bg-dark border-light-subtle">
          <div class="card-body p-0">
            <table class="table table-dark table-sm mb-0 align-middle">
              <thead>
                <tr>
                  <th>Lot</th>
                  <th class="text-end">Montant</th>
                  <th>Date</th>
                  <th>Statut</th>
                </tr>
              </thead>
              <tbody>
                {% for enchere in encheres %}
                  {% set lot = enchere.lot %}
                  {% if lot %}
                    {# Déterminer un état simple comme pour les cartes de lot #}
                    {% set etat = 'termine' %}
                    {% if lot.enchereOuverte %}
                      {% set etat = 'ouverte' %}
                    {% elseif lot.evenementEnchere and lot.evenementEnchere.debutAt %}
                      {% if 'now'|date('U') < lot.evenementEnchere.debutAt|date('U','Europe/Paris') %}
                        {% set etat = 'a_venir' %}
                      {% endif %}
                    {% endif %}

                    {% set final = lot.statutFinal %}

                    <tr>
                      <td>
                        <a href="{{ path('app_lot_show', { id: lot.id }) }}" class="link-light text-decoration-none">
                          {{ lot.titre|default('Lot sans titre') }}
                        </a>
                      </td>
                      <td class="text-end">
                        {{ enchere.montant|number_format(2, ',', ' ') }} €
                      </td>
                      <td class="small text-muted">
                        {{ enchere.creeLe|date('d/m/Y H:i','Europe/Paris') }}
                      </td>
                      <td>
                        {% if etat == 'ouverte' %}
                          <span class="badge bg-success">En cours</span>
                        {% elseif etat == 'a_venir' %}
                          <span class="badge bg-info">À venir</span>
                        {% else %}
                          {% if final == 'remportee' and lot.gagnant and lot.gagnant.id == app.user.id %}
                            <div class="d-flex flex-column gap-1">
                              <span class="badge bg-light text-dark align-self-start">Remportée</span>
                              <small class="text-muted">Retrouvez le règlement dans <a class="link-light" href="{{ path('app_mes_factures') }}">Mes factures</a>.</small>
                            </div>
                          {% elseif final == 'remportee' %}
                            <span class="badge bg-secondary">Perdue</span>
                          {% elseif final == 'annulee' %}
                            <span class="badge bg-secondary">Annulée</span>
                          {% else %}
                            <span class="badge bg-secondary">Terminée</span>
                          {% endif %}
                        {% endif %}
                      </td>
                    </tr>
                  {% endif %}
                {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      {% endif %}
    </div>
  </main>
{% endblock %}
