{% extends 'base.html.twig' %}

{% block title %}Mon Panier - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <h1 class="mb-4">Mon Panier</h1>
        
        {% if cart.items|length > 0 %}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Quantité</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in cart.items %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if item.product.image %}
                                            <img src="{{ asset('uploads/products/' ~ item.product.image) }}" 
                                                 alt="{{ item.product.name }}" 
                                                 class="img-thumbnail me-3" 
                                                 style="width: 80px; height: auto;">
                                        {% endif %}
                                        <div>
                                            <h5 class="mb-0">{{ item.product.name }}</h5>
                                            <small class="text-muted">Réf: {{ item.product.reference }}</small>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ item.product.price|number_format(2, ',', ' ') }} €</td>
                                <td>
                                    <form action="{{ path('cart_update', {'id': item.id}) }}" method="post" class="d-flex">
                                        <input type="number" 
                                               name="quantity" 
                                               value="{{ item.quantity }}" 
                                               min="1" 
                                               max="{{ item.product.stock }}" 
                                               class="form-control form-control-sm me-2" 
                                               style="width: 80px;">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>{{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} €</td>
                                <td>
                                    <a href="{{ path('cart_remove', {'id': item.id}) }}" 
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('Êtes-vous sûr de vouloir retirer ce produit du panier ?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Total :</td>
                            <td colspan="2" class="fw-bold">{{ total|number_format(2, ',', ' ') }} €</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            
            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_accueil') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Continuer mes achats
                </a>
                <div>
                    <a href="{{ path('cart_clear') }}" 
                       class="btn btn-outline-danger me-2"
                       onclick="return confirm('Êtes-vous sûr de vouloir vider votre panier ?')">
                        <i class="fas fa-trash me-1"></i> Vider le panier
                    </a>
                    <a href="{{ path('checkout') }}" class="btn btn-primary">
                        <i class="fas fa-credit-card me-2"></i>Procéder au paiement
                    </a>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
                <h3>Votre panier est vide</h3>
                <p class="text-muted">Parcourez nos produits et ajoutez des articles à votre panier.</p>
                <a href="{{ path('app_accueil') }}" class="btn btn-primary mt-3">
                    <i class="fas fa-shopping-bag me-2"></i>Découvrir nos produits
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Mise à jour en temps réel de la quantité
        document.querySelectorAll('input[name="quantity"]').forEach(input => {
            input.addEventListener('change', function() {
                this.closest('form').submit();
            });
        });
    </script>
{% endblock %}
