{% extends 'base.html.twig' %}

{% block title %}Mon profil — Maison d’Enchères{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container" style="max-width:900px;">
      <h1 class="h3 text-accent mb-4">Mon profil</h1>

      <div class="row g-4">
        <div class="col-12 col-lg-6">
          <div class="card bg-dark border-light-subtle h-100">
            <div class="card-body">
              <h2 class="h5 text-accent mb-3">Informations</h2>
              <p class="mb-1"><span class="text-muted">Email:</span> {{ app.user ? app.user.userIdentifier : '—' }}</p>
              <p class="mb-1"><span class="text-muted">Nom:</span> {{ app.user and app.user.nom is defined ? app.user.nom : '—' }}</p>
              <p class="mb-0"><span class="text-muted">Prénom:</span> {{ app.user and app.user.prenom is defined ? app.user.prenom : '—' }}</p>
            </div>
          </div>
        </div>

        <div class="col-12 col-lg-6">
          <div class="card bg-dark border-light-subtle h-100">
            <div class="card-body">
              <h2 class="h5 text-accent mb-3">Actions</h2>
              <div class="d-flex gap-2 flex-wrap">
                <a href="{{ path('app_mes_favoris') }}" class="btn btn-primary text-white">Voir mes favoris</a>
                <a href="{{ path('app_lot_index') }}" class="btn btn-outline-light">Parcourir les lots</a>
                {% if app.user %}
                  <a href="{{ path('app_logout') }}" class="btn btn-outline-light">Se déconnecter</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
