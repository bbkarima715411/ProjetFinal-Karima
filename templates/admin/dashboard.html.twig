{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord - Administration{% endblock %}

{% block body %}
    <h1 class="mb-4">Tableau de bord</h1>
    
    <div class="row mb-4">
        <!-- Carte Commandes en attente -->
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Commandes en attente</h5>
                            <h2 class="mb-0">{{ recent_orders is defined and recent_orders ? recent_orders|filter(o => o.status == 'pending')|length : 0 }}</h2>
                        </div>
                        <i class="bi bi-cart3" style="font-size: 2.5rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="{{ path('admin_orders') }}" class="text-white">Voir les commandes <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        
        <!-- Carte Produits en stock -->
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Produits en stock</h5>
                            <h2 class="mb-0">{{ low_stock_products is defined ? low_stock_products|length : 0 }}</h2>
                        </div>
                        <i class="bi bi-box-seam" style="font-size: 2.5rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="{{ path('admin_products') }}" class="text-white">Gérer les produits <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        
        <!-- Carte Utilisateurs -->
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Utilisateurs</h5>
                            <h2 class="mb-0">{{ total_users is defined ? total_users : 0 }}</h2>
                            <small class="text-white-50">+{{ new_users_this_month is defined ? new_users_this_month : 0 }} ce mois-ci</small>
                        </div>
                        <i class="bi bi-people" style="font-size: 2.5rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="{{ path('admin_users') }}" class="text-white">Gérer les utilisateurs <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
        
        <!-- Carte Alertes stock bas -->
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Alertes stock bas</h5>
                            <h2 class="mb-0">{{ low_stock_products is defined ? low_stock_products|length : 0 }}</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle" style="font-size: 3rem; opacity: 0.3;"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a href="{{ path('admin_products') }}" class="text-white">Voir les produits <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <!-- Section Utilisateurs récents -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Utilisateurs récents</h5>
                    <a href="{{ path('admin_users') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                </div>
                <div class="list-group list-group-flush">
                    {% if recent_users is defined and recent_users is not empty %}
                        {% for user in recent_users %}
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        <i class="bi bi-person-circle" style="font-size: 2rem;"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1">{{ user.firstName ?? '' }} {{ user.lastName ?? '' }}</h6>
                                        <small class="text-muted">{{ user.email ?? '' }}</small>
                                    </div>
                                </div>
                                <span class="badge bg-primary rounded-pill">Nouveau</span>
                            </a>
                        {% endfor %}
                    {% else %}
                        <div class="list-group-item text-muted">Aucun utilisateur récent</div>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Dernières commandes</h5>
                    <a href="{{ path('admin_orders') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>N° Commande</th>
                                <th>Client</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Statut</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in recent_orders|slice(0, 5) %}
                                <tr>
                                    <td>#{{ order.id }}</td>
                                    <td>{{ order.deliveryFirstname }} {{ order.deliveryLastname }}</td>
                                    <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ order.total|format_currency('EUR') }}</td>
                                    <td>
                                        <span class="badge bg-{{ order.status == 'pending' ? 'warning' : (order.status == 'shipped' ? 'info' : (order.status == 'delivered' ? 'success' : (order.status == 'cancelled' ? 'danger' : 'secondary'))) }}">
                                            {{ ('order.status.' ~ order.status)|trans }}
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a href="{{ path('admin_order_show', {'id': order.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucune commande trouvée</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Produits en stock bas</h5>
                    <a href="{{ path('admin_products') }}" class="btn btn-sm btn-outline-primary">Voir tout</a>
                </div>
                <div class="list-group list-group-flush">
                    {% for product in low_stock_products|slice(0, 5) %}
                        <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">{{ product.name }}</h6>
                                <small class="text-muted">Réf: {{ product.reference }}</small>
                            </div>
                            <span class="badge bg-{{ product.stock == 0 ? 'danger' : 'warning' }}">
                                {{ product.stock }} en stock
                            </span>
                        </a>
                    {% else %}
                        <div class="list-group-item text-center text-muted">
                            Aucun produit en stock bas
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
