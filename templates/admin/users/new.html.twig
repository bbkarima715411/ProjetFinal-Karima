{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter un utilisateur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Ajouter un utilisateur</h1>
            <a href="{{ path('admin_users') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Nouvel utilisateur</h6>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.email, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'email@exemple.com'
                                },
                                'label': 'Adresse email *',
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.plainPassword, {
                                'attr': {
                                    'class': 'form-control',
                                    'autocomplete': 'new-password'
                                },
                                'label': 'Mot de passe *',
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(form.firstName, {
                                'attr': {
                                    'class': 'form-control'
                                },
                                'label': 'Prénom *',
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.lastName, {
                                'attr': {
                                    'class': 'form-control'
                                },
                                'label': 'Nom *',
                                'label_attr': {'class': 'form-label'}
                            }) }}
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-12">
                            {{ form_row(form.roles, {
                                'attr': {
                                    'class': 'form-check-input',
                                },
                                'label': 'Rôles *',
                                'label_attr': {'class': 'd-block mb-2'}
                            }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            {{ form_row(form.isVerified, {
                                'attr': {
                                    'class': 'form-check-input',
                                },
                                'label': 'Email vérifié',
                                'label_attr': {'class': 'form-check-label'}
                            }) }}
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <a href="{{ path('admin_users') }}" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Désactiver la validation HTML5 native
        (function() {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
{% endblock %}
