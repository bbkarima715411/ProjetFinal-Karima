{% extends 'admin/base.html.twig' %}

{% block title %}Commande #{{ order.id }} - Administration{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Commande #{{ order.id }}</h1>
        <a href="{{ path('admin_orders') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Détails de la commande</h5>
                    <div>
                        <span class="badge bg-{{ order.status == 'pending' ? 'warning' : (order.status == 'processing' ? 'info' : (order.status == 'shipped' ? 'primary' : (order.status == 'delivered' ? 'success' : (order.status == 'cancelled' ? 'danger' : 'secondary')))) }}">
                            {{ ('order.status.' ~ order.status)|trans }}
                        </span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-end">Prix unitaire</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in order.items %}
                                    <tr>
                                        <td>
                                            <strong>{{ item.product.name }}</strong><br>
                                            <small class="text-muted">Réf: {{ item.product.reference }}</small>
                                        </td>
                                        <td class="text-end">{{ item.price|format_currency('EUR') }}</td>
                                        <td class="text-center">{{ item.quantity }}</td>
                                        <td class="text-end">{{ (item.price * item.quantity)|format_currency('EUR') }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Sous-total :</strong></td>
                                    <td class="text-end">{{ order.total|format_currency('EUR') }}</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Frais de livraison :</strong></td>
                                    <td class="text-end">Gratuit</td>
                                </tr>
                                <tr class="table-active">
                                    <td colspan="3" class="text-end"><strong>Total :</strong></td>
                                    <td class="text-end"><strong>{{ order.total|format_currency('EUR') }}</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Informations client</h5>
                </div>
                <div class="card-body">
                    <h6>Livraison</h6>
                    <address>
                        <strong>{{ order.deliveryFirstname }} {{ order.deliveryLastname }}</strong><br>
                        {{ order.deliveryAddress }}<br>
                        {% if order.deliveryAddress2 %}{{ order.deliveryAddress2 }}<br>{% endif %}
                        {{ order.deliveryPostalCode }} {{ order.deliveryCity }}<br>
                        {{ order.deliveryCountry }}
                    </address>
                    
                    <hr>
                    
                    <h6>Contact</h6>
                    <p class="mb-1">
                        <i class="bi bi-envelope"></i> 
                        {{ order.user ? order.user.email : 'Non disponible' }}
                    </p>
                    {% if order.user and order.user.phone %}
                        <p class="mb-0">
                            <i class="bi bi-telephone"></i> 
                            {{ order.user.phone }}
                        </p>
                    {% endif %}
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Mettre à jour le statut</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_order_update_status', {'id': order.id}) }}">
                        <div class="mb-3">
                            <select name="status" class="form-select">
                                <option value="pending" {{ order.status == 'pending' ? 'selected' : '' }}>En attente</option>
                                <option value="processing" {{ order.status == 'processing' ? 'selected' : '' }}>En cours de traitement</option>
                                <option value="shipped" {{ order.status == 'shipped' ? 'selected' : '' }}>Expédiée</option>
                                <option value="delivered" {{ order.status == 'delivered' ? 'selected' : '' }}>Livrée</option>
                                <option value="cancelled" {{ order.status == 'cancelled' ? 'selected' : '' }}>Annulée</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Mettre à jour</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
