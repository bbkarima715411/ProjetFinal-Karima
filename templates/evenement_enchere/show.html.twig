{% extends 'base.html.twig' %}

{% block title %}Détail de l’évènement{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-accent m-0">Évènement</h1>
        <div>
          <a href="{{ path('app_evenement_enchere_index') }}" class="btn btn-outline-light me-2">← Retour</a>
          <a href="{{ path('app_evenement_enchere_edit', {'id': evenement_enchere.id}) }}" class="btn btn-primary">Éditer</a>
