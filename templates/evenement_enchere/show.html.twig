      </div>

      <div class="card bg-dark border-light-subtle">
        <div class="card-body">
          <table class="table table-dark align-middle mb-0">
            <tbody>
              <tr>
                <th class="w-25">Id</th>
                <td>{{ evenement_enchere.id }}</td>
              </tr>
              <tr>
                <th>EvenementEnchere</th>
                <td>{{ evenement_enchere.EvenementEnchere }}</td>
              </tr>
            </tbody>
          </table>
          <div class="mt-3">
            {{ include('evenement_enchere/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
