{% extends 'base.html.twig' %}

{% block title %}Événements d’enchères{% endblock %}

{% block body %}
  <main class="bg-black text-white py-5" style="min-height:100vh;">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-accent m-0">Événements d’enchères</h1>
        <a href="{{ path('app_evenement_enchere_new') }}" class="btn btn-primary text-white">Créer</a>
      </div>

      <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
          <thead>
            <tr>
              <th>Id</th>
              <th>Evenement</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
          {% for evenement_enchere in evenement_encheres %}
            <tr>
              <td>{{ evenement_enchere.id }}</td>
              <td>{{ evenement_enchere.EvenementEnchere }}</td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-light me-2" href="{{ path('app_evenement_enchere_show', {'id': evenement_enchere.id}) }}">Voir</a>
                <a class="btn btn-sm btn-primary" href="{{ path('app_evenement_enchere_edit', {'id': evenement_enchere.id}) }}">Éditer</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="3" class="text-center text-muted">Aucun enregistrement</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </main>
{% endblock %}
