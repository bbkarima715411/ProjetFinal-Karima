{% extends 'base.html.twig' %}
{% block title %}{{ product.name }}{% endblock %}
{% block body %}
  <main class="container py-4 text-white">
    <h1 class="mb-3">{{ product.name }}</h1>
    {% if product.image %}
      <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="{{ product.name }}" style="max-width:420px" class="mb-3">
    {% endif %}
    <p class="text-muted">{{ product.shortDescription }}</p>
    <div>{{ product.description|nl2br }}</div>
    <p class="mt-3"><strong>Prix :</strong> {{ product.price|number_format(2, ',', ' ') }} â‚¬</p>
  </main>
{% endblock %}
