{% extends 'base.html.twig' %}

{% block title %}Mes Factures{% endblock %}

{% block body %}
<main class="bg-black text-white py-5" style="min-height:100vh;">
  <div class="container" style="max-width:1100px;">
    <h1 class="h3 text-accent mb-4">Mes Factures</h1>

    <div class="card bg-dark border-light-subtle mb-3">
      <div class="card-body">
        <p class="text-muted mb-2">Vous trouverez ici l'historique de vos factures pour les enchères remportées.</p>
        <div class="mt-3">
          <p class="text-center text-muted fst-italic mb-0">Aucune facture disponible pour le moment.</p>
        </div>
      </div>
    </div>

    {# Exemple Bootstrap (à activer quand données prêtes)
    <div class="table-responsive">
      <table class="table table-dark table-striped align-middle border-secondary">
        <thead>
          <tr>
            <th>N° Facture</th>
            <th>Date</th>
            <th>Lot</th>
            <th>Montant</th>
            <th>Statut</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
          <tr>
            <td>#{{ facture.numero }}</td>
            <td>{{ facture.date|date('d/m/Y') }}</td>
            <td>{{ facture.lot.titre }}</td>
            <td>{{ facture.montant|number_format(2, ',', ' ') }} €</td>
            <td>
              <span class="badge {% if facture.statut == 'payée' %}bg-success{% else %}bg-warning text-dark{% endif %}">{{ facture.statut }}</span>
            </td>
            <td>
              <a href="#" class="link-light me-3">Télécharger</a>
              <a href="#" class="link-light">Voir</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="6" class="text-center text-muted">Aucune facture disponible</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
    #}

    <div class="mt-3">
      <a href="{{ path('app_profil') }}" class="btn btn-outline-light">← Retour au profil</a>
    </div>
  </div>
</main>
{% endblock %}
