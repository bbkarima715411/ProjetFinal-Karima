{% extends 'base.html.twig' %}

{% block title %}{{ label }} — Catégorie{% endblock %}

{% block body %}
  <main class="bg-black text-white py-4" style="min-height:100vh;">
    <div class="container">
      <h1 class="text-center mb-4 text-accent">{{ label }}</h1>

      {% if lots is empty %}
        <p class="text-center">Aucun lot dans cette catégorie.</p>
      {% else %}
        <div class="row g-4">
          {% for lot in lots %}
            <div class="col-12 col-sm-6 col-lg-4">
              <a class="text-decoration-none text-white" href="{{ path('app_lot_show', {id: lot.id}) }}">
                <div class="lot-card">
                  <div class="mb-3">
                    {% if lot.imageFilename %}
                      <img src="{{ asset('uploads/' ~ lot.imageFilename) }}" alt="{{ lot.titre|default('Lot') }}" style="height:220px;object-fit:cover;border-radius:8px;">
                    {% else %}
                      <img src="{{ asset('images/demo/commo.png') }}" alt="Image par défaut" style="height:220px;object-fit:cover;opacity:.85;border-radius:8px;">
                    {% endif %}
                  </div>
                  <div>
                    <h3 class="h5 text-accent mb-1">{{ lot.titre|default('Lot sans titre') }}</h3>
                    <p class="mb-1 text-secondary small">Catégorie : {{ lot.categorie|default(label) }}</p>
                    <p class="fw-bold mb-0">Prix actuel : {{ lot.prixActuel|number_format(2, ',', ' ') }} €</p>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </main>
{% endblock %}
